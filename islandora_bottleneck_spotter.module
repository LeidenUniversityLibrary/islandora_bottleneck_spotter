/**
 * Helper function to mark the time of each.
 *
 *  @param $what
 *    a label (string) for what to mark.
 *  @param $time_since
 *    an associative array containing one key and one value, used to log the
 *    total time between two related whats:
 *     - key is the name of the related what
 *     - value is the label for the total time
 *  @param $info
 *    array with additional info to log
 *  @param $printtolog
 *    BOOL indicating if it should be logged: only use this on hook_exit!
 */
function _islandora_bottleneck_spotter_mark($what, $time_since = NULL, $info = NULL, $printtolog = FALSE) {
  $stats = &drupal_static(__FUNCTION__);

  $url = drupal_get_path_alias();
  if (!isset($stats[$url])) {
    $stats[$url] = array(
      'REQUEST_TIME' => isset($_SERVER["REQUEST_TIME_FLOAT"])?$_SERVER["REQUEST_TIME_FLOAT"]:microtime(TRUE),
      'whats' => array(),
    );
  }
  $whatstats = array('what' => $what, 'time' => microtime(TRUE));
  if (isset($time_since)) {
    $whatstats['since'] = $time_since;
  }
  if (isset($info)) {
    $whatstats['info'] = $info;
  }
  //$whatstats['trace'] = debug_backtrace(0, 10);
  $stats[$url]['whats'][] = $whatstats;

  if ($printtolog) {
    $messages = array();
    $date = date("Ymd");
    $time = date("G:i:s");
    $path = "/tmp/bottleneckspotter_$date.log";
    foreach ($stats as $url => $urlstats) {
      $timeurl = "$time $url";
      $start = $urlstats['REQUEST_TIME'];
      $lasts = array();
      $lasttime = 0;
      $lastwhat = NULL;
      $lastsontime = array('sincelast' => array(), 'timesince' => array());
      $usage = array('count' => array(), 'time' => array());
      foreach ($urlstats['whats'] as $number => $whatstats) {
        $what = $whatstats['what'];
        $message = "$timeurl -> $what";
        if (!isset($usage['count'][$what])) {
          $usage['count'][$what] = 0;
        }
        $usage['count'][$what]++;
        $attime = ($whatstats['time'] - $start);
        $message .= ' @ ' . $attime;
        $sincelast = ($whatstats['time'] - $lasttime);
        if ($lastwhat !== NULL) {
          if (!isset($usage['time'][$lastwhat])) {
            $usage['time'][$lastwhat] = 0.0;
          }
          $usage['time'][$lastwhat] += $sincelast;
        }
        if (isset($whatstats['since'])) {
          foreach ($whatstats['since'] as $related => $label) {
            if (isset($lasts[$related]['time'])) {
              $timesince = ($whatstats['time'] - $lasts[$related]['time']);
              $message .= ' (total for ' . $label . ':' . sprintf("%.5F", $timesince) . ')';
              $lastsontime['timesince'][] = array( 'message' => "$what @ $attime took " . sprintf("%.5F", $timesince) . " since $label", 'time' => $timesince );
            }
            elseif ($related === 'REQUEST_TIME') {
              $timesince = ($whatstats['time'] - $start);
              $message .= ' (total for ' . $label . ':' . $timesince . ')';
              $lastsontime['timesince'][] = array( 'message' => "$what @ $attime took " . sprintf("%.5F", $timesince) . " since requeststart", 'time' => $timesince );
            }
            else {
              $message .= ' (no total for ' . $label . ')';
            }
          }
        }
        elseif ($lasttime !== 0) {
          $message .= ' (since last: ' . sprintf("%.5F", $sincelast) . ')';
          $lastsontime['sincelast'][] = array( 'message' => "$what @ $attime took " . sprintf("%.5F", $sincelast), 'time' => $sincelast );
        }
        if (isset($whatstats['info'])) {
          $message .= ' => ' . $whatstats['info'];
        }
        $message .= "\n";
        $messages[] = $message;
        $lasts[$what] = $whatstats;
        $lasttime = $whatstats['time'];
        $lastwhat = $what;
      }
      $comparetimes = function ($a, $b) {
        return (($a['time'] - $b['time']) > 0.0)?-1:-1;
      };
      $firstmessages = array();
      $firstmessages[] = "\n>>>> $timeurl\n";
      usort($lastsontime['sincelast'], $comparetimes);
      $slowest = array_column(array_slice($lastsontime['sincelast'], 0, 3), 'message');
      $firstmessages[] = '>>>> Slowest since last: ' . implode(', ', $slowest) . "\n";
      usort($lastsontime['timesince'], $comparetimes);
      $slowest = array_column(array_slice($lastsontime['timesince'], 0, 3), 'message');
      $firstmessages[] = '>>>> Slowest since related: ' . implode(', ', $slowest) . "\n";
      arsort($usage['count'], SORT_NUMERIC);
      $i = 3;
      foreach ($usage['count'] as $what => $count) {
        $firstmessages[] = ">>>> Most used: $what => $count (" . sprintf("%.5F", $usage['time'][$what]) . " sec)\n";
        if (--$i <= 0) {
          break;
        }
      }
      arsort($usage['time'], SORT_NUMERIC);
      $i = 3;
      foreach ($usage['time'] as $what => $count) {
        $firstmessages[] = ">>>> Most time: $what => " . sprintf("%.5F", $count) . " (" . $usage['count'][$what] . " times)\n";
        if (--$i <= 0) {
          break;
        }
      }
      $messages = array_merge($firstmessages, $messages);
    }
    file_put_contents($path, $messages, FILE_APPEND | LOCK_EX);
    unset($stats);
  }
}
